{% extends "base.html.twig" %}
{% block title %} Catégorie {{ category.name }}{% endblock %}
{% block body %}
        <header>
                <img class ="banner" src = "{{ asset('/uploads/' ~ category.img) }}" alt = "{{ category.name }}">
                <h1>{{ category.name }}</h1>
        </header>
        <ul class = "program-list">
                {% for program in programs %}
                <li class = "program-item">  
                        <div class="card" style="width: 20rem;">
                                <img src="{{program.poster}}" class="card-img-top" alt="...">
                                <div class="card-body">
                                        <h5 class="card-title"><strong>{{ program.title }}</strong></h5>
                                        <a href="{{ path("program_show", { id: program.id }) }}" class="btn btn-primary">JE DECOUVRE</a>
                                </div>
                        </div>
                </li>
                {% endfor %}
        </ul>
        <section class = "btn-section">
                <a class = "btn" href = "/categories">Retour à la liste des catégories</a>
        </section>
{% endblock %}
