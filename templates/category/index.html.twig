{% extends "base.html.twig" %}
{% block title %} Liste des catégories {% endblock %}
{% block body %}
    <h2>Liste des catégories :</h2>
    <ul class = "program-list">
    {% for category in categories %}
        <li class = "program-item">  
            <div class="card" style="width: 20rem;">
                <img src="{{ asset('/uploads/' ~ category.img) }}" class="card-img-top" alt="{{ category.name }}">
                <div class="card-body">
                    <h5 class="card-title"><strong>{{ category.name }}</strong></h5>
                    <a class ="btn" href="{{ path('category_show', {'name': category.name})}}">DECOUVRIR</a></h4>
                </div>
            </div>
        </li>           
    {% endfor %}
    </ul>
    <section class = "btn-section">
        <a class = "btn" href = "{{ path("category_new") }}">Ajoutez une catégorie</a>
        <a class = "btn" href="/">Retour à l'accueil</a>
    </section>
{% endblock %}